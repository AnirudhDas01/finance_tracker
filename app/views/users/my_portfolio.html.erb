<h1>My Portfolio</h1>

<div class="search-area">
    <h3>Search Crypto Currency</h3>

        <%= form_tag search_stock_path, remote: true, method: :get, id: 'stock-search-form' do %>
        <div class="form-group row">
            <div class="col-sm-9">
            <%= text_field_tag :stock, params[:stock], placeholder: "Crypto ticker Symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3">
            <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
                <%= 'Search' %>
            <% end %>
            </div>
  </div>
<% end %>
</div>
  <div id="results">
  
  </div>



